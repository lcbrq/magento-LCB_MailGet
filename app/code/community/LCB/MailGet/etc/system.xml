<?xml version="1.0"?>
<config>
    <tabs>
        <lcbrq translate="label" module="mailget">
            <label><![CDATA[<a href="http://lcbrq.com" target="_blank" style="position:absolute;margin-top:1px;display:inline-block;width:14px;height:14px;background-image: url('data:image/png;base64,')"></a><b style="padding-left: 19px">LCBRQ</b>]]></label>
            <sort_order>1200</sort_order>
        </lcbrq>
    </tabs>
    <sections>
        <mailget translate="label" module="mailget">                    
            <label>MailGet</label>
            <tab>lcbrq</tab>
            <frontend_type>text</frontend_type>
            <sort_order>999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>            
            <groups>
                <connection translate="label"> 
                    <label>Connection</label>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                        </enable>
                        <key translate="label">
                            <label>API key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                        </key>
                        <list translate="label">
                            <label>API list</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                        </list>
                    </fields>
                </connection>
                <general>
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <fields>
                        <autosubscribe translate="label comment">
                            <label>Enable</label>
                            <comment>Autosubscribe customers to MailGet after order is placed</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                        </autosubscribe>
                    </fields>
                </general>
            </groups>
        </mailget>
    </sections>
</config>
